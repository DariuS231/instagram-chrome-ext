{
  "manifest_version": 2,

  "name": "Chromestagram",
  "description": "Instagram feed in your Google Chrome",
  "version": "0.1",
  "icons": { 
    "128": "128_icon.png"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "identity",
    "*://api.instagram.com/*"
  ],

  "oauth2": {
    "client_id": "213162873781-2g0sqjnkrdhfc8nilicqbc5vrrlte6k7.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive"
    ]
  }
}
